<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fire.auth.com.raddi_new.PostPage">


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/book_show"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/add_book_photo"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/price_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="0000"
            android:textColor="#e097f577"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/book_name_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:text="Bokk Nmae"
            android:textColor="#f00"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/description_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/user_name_show"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/e_back"
            android:padding="10dp" />

        <TextView
            android:id="@+id/mobile_show"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/e_back"
            android:padding="10dp" />

        <TextView
            android:id="@+id/address_show"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/e_back"
            android:padding="10dp" />

        <TextView
            android:id="@+id/distt_show"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/e_back"
            android:padding="10dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>